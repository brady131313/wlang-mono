{
  "name": "playground",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently 'yarn serve:js' 'yarn watch:rs' 'yarn watch:css'",
    "serve:js": "node build.mjs",
    "build:rs": "wasm-pack build --weak-refs --reference-types",
    "watch:rs": "onchange './src/*.*' -- yarn build:rs",
    "watch:css": "tailwindcss -i ./lib/app.css -o ./www/output.css --watch"
  },
  "dependencies": {
    "playground": "./pkg",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tsconfig/create-react-app": "^2.0.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.2",
    "esbuild-plugin-wasm": "^1.1.0",
    "onchange": "^7.1.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  }
}
